<h1>Edit Property Listing</h1>

<form action="/properties/<%=@property.id%>" method="POST">
	<input type="hidden" name="_method" value="patch">

	<label>Short Description:</label>
	<input type="text" name="description" value="<%= @property.description %>"><br>

	<label>Location:</label>
	<input type="text" name="location" value="<%= @property.location %>"><br>
	
	<label>Price:</label>
	<input type="number" name="price" value="<%= @property.price %>"> rate per night<br>
	
	<label>Availability:</label>
	<input type="text" name="availability" value="<%= @property.availability %>"><br>
	
	<input type="submit" value="Update Property Listing">
</form>

<br>
<br>
<br>
<br>
<%if current_user.id == @property.user.id %>
<form action="/properties/<%=@property.id%>" method="POST">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Delete This Property Listing">
</form>
<% end %>